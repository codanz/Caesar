#include <cs50.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int main(int argc, string argv[])
{    
    // Check if 2 commandline arguments are given, otherwise abort program
    if (argc == 2)
    {
        printf("Success\n");
        printf("%s\n", argv[1]);
    }
    else
    {
        printf ("Usage: ./ceasar key\n");
        return 1;
    }
    
    // Transform argv[1] to int and assign to key variable
    int key = atoi(argv[1]);
    printf ("%i\n", key);
}
